<input value="@CustomInput" @oninput="OnInputChange" />

<b>@CustomInput</b>
@code {
    [Parameter]
    public string CustomInput { get; set; }

    [Parameter]
    public EventCallback<string> CustomInputChanged { get; set; }

    private async Task OnInputChange(ChangeEventArgs e)
    {
        string newValue = e.Value.ToString();
        // Update CustomInput and notify the parent component
        CustomInput = newValue;
        await CustomInputChanged.InvokeAsync(newValue);
    }
}
